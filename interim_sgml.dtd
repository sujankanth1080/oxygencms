<!-- ref IDREF #IMPLIED -->
<!-- ==================================================================
   Basic character markup...
   These may need to allow nesting within each other at some point...
-->
<!ELEMENT i - - (#PCDATA)>
<!ELEMENT b - - (#PCDATA)>
<!ELEMENT sc - - (#PCDATA)>
<!ELEMENT sub - - (#PCDATA)>
<!ELEMENT sup - - (#PCDATA)>
