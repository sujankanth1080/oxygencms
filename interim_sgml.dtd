<!-- ==================================================================
-->
<!-- EWYB parameter entities for content models -->
<!ENTITY % simple-text " #PCDATA | i | b | sc | abbr | sub | sup | anchor | lbrace | rbrace ">
<!ENTITY % free-text " %simple-text; | xr | endnoteref | footnote | date | seg | seg-alternates">
<!-- The usage attribute is used on section divisions and heading elements to 
indicate which print publications use the content. The available attributes indicate
which print publication group this section should appear in-->
<!-- possible values include:
ewyb | edio | eerca | casee | we | fea | ass | sacac | mena 
 -->
<!ENTITY % usage "usage CDATA #IMPLIED">
<!ENTITY % component-list "(ewyb | ass | casee | eerca | fea | mena | sasia | sacac | usac | we | edio | none)">
<!ENTITY % revision-att 'revision-date CDATA #REQUIRED
	revision-type	(new | secondary | reply | removed | typo | ownweb) #REQUIRED'>
<!ENTITY % print-style 'print-style (pgwidth | column)'>
<!ENTITY % stats-sections "sect-type (area-population | health-welfare | agriculture | forestry | fishing | agriculture-forestry-fishing | mining | industry | finance | external-trade | transport | tourism | communications-media | education)">
<!ENTITY % media 'media (print | online | printandonline) '>
<!ENTITY % alternates-attributes '
  type (alternates) #REQUIRED
  default %component-list; #REQUIRED
  priority CDATA #IMPLIED'>
<!-- Sigmalink parameter entities for subdocs -->
<!ENTITY % slref-att 'id ID #IMPLIED
SLfilename CDATA #IMPLIED
SLlink     NAME  #FIXED "SLsdocrf"
SLlinkid   CDATA #IMPLIED
SLsdocid   CDATA #IMPLIED'>

<!ENTITY % slcall-att 'SLlink   NAME #FIXED "SLsdoc"
